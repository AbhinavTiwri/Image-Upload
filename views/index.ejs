<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">Add New Employee</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" name="name" />
                </div>
                <div class="mb-3">
                  <label for="age" class="form-label">Price</label>
                  <input type="text" class="form-control" id="price" name="price" />
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Image</label>
                    <input type="file" class="form-control" id="file" name="image" />
                  </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">List Of Employee</h2>

            <%# SHow All Data %>
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    <% var i=1 %>
                    <% data.forEach((item)=>{ %>
                        <tr>
                            <td><%= i++ %></td>
                            <td><%= item.name %></td>
                            <td><%= item.price %></td>
                            <td><img src="./uplode/<%= item.image %>" alt="img" width="80px" ></td>
                            <td>

                                <form action="/employee/delete/<%= item._id %>" method="post" class="d-inline">
                                    <button class="btn btn-submit">
                                        <i class="fa fa-trash text-danger"></i>
                                    </button>
                                </form>
                                
                            </td>
                        </tr>
                    <% }) %>
                    
                </tbody>
              </table>
              
        </div>
        
    </div>
</div>
    <%- include('./partials/footer.ejs') %>